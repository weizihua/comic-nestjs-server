{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@lib/db": [
        "libs/db/src"
      ],
      "@lib/db/*": [
        "libs/db/src/*"
      ],
      "@app/parser": [
        "libs/@lib/parser/src",
        "libs/parser/src"
      ],
      "@app/parser/*": [
        "libs/@lib/parser/src/*",
        "libs/parser/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}